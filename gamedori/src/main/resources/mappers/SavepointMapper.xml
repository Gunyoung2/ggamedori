<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="game.dori.mapper.savepointMapper">

	<!-- 마이페이지 적립금 리스트 출력  -->
	<select id="selectList4" resultType="savepointVO" parameterType="int">
		select *
			from savepoint_tb
			where MEMBER_TB_IDX = #{MEMBER_IDX}
	</select>
	
	<!-- 마이페이지 상단 적립금 출력  -->
	<select id="selectPointBalance" resultType="int" parameterType="int">
		select savept_balance
			from savepoint_tb
			where MEMBER_TB_IDX = #{MEMBER_IDX}
	</select>
	
</mapper>